<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.ahaag.peoplr.EditInfo">

    <TextView
        android:text="To change description:"
        android:layout_width="wrap_content"
        android:id="@+id/dView"
        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="new description here"
        android:layout_below="@+id/dView"
        android:id="@+id/dEdit"
        android:inputType="text"
        />
    <TextView
        android:text="To change contact information:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dEdit"
        android:id="@+id/cView"/>
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="new contact here"
        android:layout_below="@+id/cView"
        android:id="@+id/cEdit"
        android:inputType="text"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Save Changes"
        android:textSize="10dp"
        android:id="@+id/Button"
        android:layout_below="@+id/cEdit"
        android:onClick="selfDestruct" />



</RelativeLayout>
